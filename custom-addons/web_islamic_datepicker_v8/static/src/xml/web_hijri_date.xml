<template>
    <t t-name="web.datepicker">
        <t t-if="widget.__parentedParent.field_manager and (widget.__parentedParent.field_manager.fields_view.arch.attrs.editable == 'top' || widget.__parentedParent.field_manager.fields_view.arch.attrs.editable == 'bottom')">
            <div height="100px;">
		        <span>
		            <t t-set="placeholder" t-value="widget.getParent().node and widget.getParent().node.attrs.placeholder"/>
		            <input type="text" class="oe_datepicker_container" disabled="disabled" style="display: none;"/>
		            
		            <input type="text"
		                t-att-name="widget.name"
		                t-att-placeholder="placeholder"
		                class="oe_datepicker_master oe_simple_date"/>
		                <img class="oe_input_icon oe_datepicker_trigger" t-att-src='_s + "/web/static/src/img/ui/field_calendar.png"'
		                 title="Select date" width="16" height="16" border="0"/>
		                <input t-att-id="widget.name" type="text" 
		                t-att-placeholder="placeholder"
		                class="oe_hijri oe_datepicker_master"
		                />
		        </span>
	        </div>
        </t>
        
        <t t-if="widget.__parentedParent.field_manager and (widget.__parentedParent.field_manager.fields_view.arch.attrs.editable != 'top' and widget.__parentedParent.field_manager.fields_view.arch.attrs.editable != 'bottom')">
            <span>
                <t t-set="placeholder" t-value="widget.getParent().node and widget.getParent().node.attrs.placeholder"/>
                <input type="text" class="oe_datepicker_container" disabled="disabled" style="display: none;"/>
                <input type="text"
                    t-att-name="widget.name"
                    t-att-placeholder="placeholder"
                    class="oe_datepicker_master oe_simple_date" 
                /><img class="oe_input_icon oe_datepicker_trigger" t-att-src='_s + "/web/static/src/img/ui/field_calendar.png"'
                     title="Select date" width="16" height="16" border="0"/>
             </span>
             <span> 
                <div>
                    <input t-att-id="widget.name" type="text"  
                    t-att-placeholder="placeholder"
                    class="oe_hijri oe_datepicker_master"/>
                    
                </div>
            </span>
        </t>
    </t>
    <t t-name="FieldDate">
        <div class="oe_simple_date">
            <span class="oe_form_field oe_simple_date oe_datepicker_root oe_form_field_datetime oe_simple_date" t-att-style="widget.node.attrs.style"/>
            <span class="oe_form_field oe_simple_date oe_datepicker_root oe_form_field_datetime oe_hijri_date" t-att-style="widget.node.attrs.style"/>
            
       </div>
    </t>
    <t t-name="FieldDatetime">
        <div class="oe_simple_date">
            <span class="oe_form_field oe_simple_date oe_datepicker_root oe_form_field_datetime oe_simple_date" t-att-style="widget.node.attrs.style"/>
            <span class="oe_form_field oe_hijri_date oe_datepicker_root oe_form_field_datetime oe_hijri_date" t-att-style="widget.node.attrs.style"/>
        	
        </div>
    </t>
</template>